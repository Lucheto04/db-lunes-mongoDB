    {
        $match: {
            reserva: 2
        }
    },
    {
        $lookup: {
            from: "cliente",
            localField: "cliente",
            foreignField: "cliente",
            as: "datos_cliente"
        }
    },
    {
        $unwind: "$datos_cliente"
