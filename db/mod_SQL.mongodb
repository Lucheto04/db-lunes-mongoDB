            foreignField: "sucursal_id",
            as: "fk_sucursal"
        }
    },
    {
        $unwind: "$fk_sucursal"
    },
    {
        $group: {
          _id: "$fk_sucursal.nombre",
          Cantidad_Disponible: {
            $sum: "$cantidad_autos"
          }
        }
    }
]);

